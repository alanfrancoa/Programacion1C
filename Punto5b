#include <stdio.h>
#include <math.h>

int main()
{
    int base, altura;
    float hipotenusa, area, perimetro;
    printf("Ingrese base:");
    scanf("%d", &base);
    printf("Ingrese altura:");
    scanf("%d", &altura);
    area = (base*altura)/2;
    hipotenusa= (base/2)*(base/2)+(altura*altura);
    hipotenusa= sqrt(hipotenusa);
    perimetro = (hipotenusa*2)+base;
    printf("El perimetro de la figura es: %f \n", perimetro);
    printf("El area de la figura es: %f", area);
    return 0;
}
